<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="32dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/team_a_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/team_a"
        android:textAlignment="center"
        android:textColor="#616161"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/team_b_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="50" />

    <TextView
        android:id="@+id/team_b_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/team_b"
        android:textAlignment="center"
        android:textColor="#616161"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/team_a_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="50" />

    <TextView
        android:id="@+id/team_a_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/_0"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="56sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/team_b_score"
        app:layout_constraintTop_toBottomOf="@id/team_a_name"
        app:layout_constraintWidth_percent="50" />

    <TextView
        android:id="@+id/team_b_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/_0"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="56sp"
        app:layout_constraintLeft_toRightOf="@id/team_a_score"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/team_b_name"
        app:layout_constraintWidth_percent="50" />

    <Button
        android:id="@+id/three_points_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="4dp"
        android:onClick="add_3_team_A"
        android:text="@string/_3_points"
        android:textAllCaps="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/three_points_b"
        app:layout_constraintTop_toBottomOf="@id/team_a_score"
        app:layout_constraintWidth_percent="50" />

    <Button
        android:id="@+id/three_points_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="4dp"
        android:onClick="add_3_team_B"
        android:text="@string/_3_points"
        android:textAllCaps="true"
        app:layout_constraintLeft_toRightOf="@id/three_points_a"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/team_a_score"
        app:layout_constraintWidth_percent="50" />

    <Button
        android:id="@+id/two_points_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="4dp"
        android:onClick="add_2_team_A"
        android:text="@string/_2_points"
        android:textAllCaps="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/two_points_b"
        app:layout_constraintTop_toBottomOf="@id/three_points_a"
        app:layout_constraintWidth_percent="50" />

    <Button
        android:id="@+id/two_points_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="4dp"
        android:onClick="add_2_team_B"
        android:text="@string/_2_points"
        android:textAllCaps="true"
        app:layout_constraintLeft_toRightOf="@id/two_points_a"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/three_points_b"
        app:layout_constraintWidth_percent="50" />

    <Button
        android:id="@+id/free_throw_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="4dp"
        android:onClick="add_1_team_A"
        android:text="@string/free_throw"
        android:textAlignment="center"
        android:textAllCaps="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/free_throw_b"
        app:layout_constraintTop_toBottomOf="@id/two_points_a"
        app:layout_constraintWidth_percent="50" />

    <Button
        android:id="@+id/free_throw_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="4dp"
        android:onClick="add_1_team_B"
        android:text="@string/free_throw"
        android:textAlignment="center"
        android:textAllCaps="true"
        app:layout_constraintLeft_toRightOf="@id/free_throw_a"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/two_points_a"
        app:layout_constraintWidth_percent="50" />

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/reset_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="reset_scores"
        android:text="@string/reset"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />


</android.support.constraint.ConstraintLayout>